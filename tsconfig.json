{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["src/modules/app/*"],
      "@transaction/*": ["src/modules/transaction/*"],
      "@payable/*": ["src/modules/payable/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
